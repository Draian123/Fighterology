<div id="carouselExample" class="carousel slide" style="height: 90vh; width: 100vw;">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="background">
            <div class="signUpFlex signUpPosition">
                <div style="color: black">Create an account</div>
                <form class="signUpForm" action="/auth/signUp" method="POST">
                    <div>
                    <label class="signUpLabels"><input class="signUpInputs" type="text" name="name" placeholder="Name"></label>
                    <label class="signUpLabels"><input class="signUpInputs" type="password" name="password" placeholder="Password"></label>
                    <label class="signUpLabels"><input class="signUpInputs" type="password" name="repeatPassword" placeholder="Confirm password"></label>
                    </div>
                    <div>
                    <button class="signUpButtons" type="submit">Submit</button>
                    </div>
                    <% if (typeof err !== 'undefined') { %>
                        <p style="color: red; z-index: 10000;"><%= err %></p>
                        <% } %>
                </form>
            </div>
        </div>
        <img src="/images/bananas.jpg" class="d-block w-100" alt="..." style="height: 90vh; width: 100vw; object-fit: cover;">
      </div>
</div>
